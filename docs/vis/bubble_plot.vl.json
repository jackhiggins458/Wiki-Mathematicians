{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jackhiggins458/FIT31792/main/data/math_country_data.csv"},
    "params": [
      {
        "name": "GDP_Below",
        "value":80000,
        "bind": {
          "input": "range",
          "min": 10000,
          "max": 120000,
          "step":10000, 
          "name": "Maximum GDP"}
      },
      {
        "name": "n_above",
        "value":1,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 50,
          "step":1, 
          "name":"Minimum # \n of Mathematicians"}
      }
    ],

    "transform": [
      {"filter":"datum.GDP_per_Capita_PPP<GDP_Below"},
      {"filter":"datum.n>=n_above"}
    ],

    "title": {
      "text":"GDP per Capita vs Density of Wiki Mathematicians per Nation",
      "anchor": "middle",
      "frame": "group",
      "font":"Georgia",
      "color":"#303030",
      "fontSize":16,
      "fontWeight":400,
      "subtitleFont":"Source Sans Pro",
      "subtitleFontSize":14,
      "subtitleColor":"#808080",
      "subtitleLineHeight":18,
      "subtitlePadding":10,
      "dy":0
    },

    "encoding": {
      "x": {
        "field": "GDP_per_Capita_PPP",
        "type": "quantitative",
        "axis": {
          "labelAngle": 0,
          "gridOpacity": 0.3,
          "titleFont": "Georgia",
          "titleFontWeight":500,
          "titleFontSize":14,
          "titleFontStyle":"italic",
          "labelFont":"Source Sans Pro",
          "title":"GDP per Capita (USD)",
          "tickMinStep":10000,
          "domainOpacity":0.5,
          "labelOpacity":0.5,
          "tickOpacity":0.5,
          "titleOpacity":0.7
        }
      },
      "y": {
        "field": "per_mil",
        "type": "quantitative",
        "scale": {"domain":[0,16]},
        "axis": {
          "labelAngle": 0,
          "gridOpacity": 0.3,
          "titleFont": "Georgia",
          "titleFontWeight":500,
          "titleFontSize":14,
          "titleFontStyle":"italic",
          "labelFont":"Source Sans Pro",
          "title":"Wiki Mathematicians per Million People",
          "domainOpacity":0.5,
          "labelOpacity":0.5,
          "tickOpacity":0.5,
          "titleOpacity":0.7
        }
      }
    },
 
  "layer": [ 
    {
     "selection": {
        "continent_highlight": {
          "type": "multi", 
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field":"n",
          "type":"quantitative",
          "scale": {
            "type": "linear",
            "exponent": 0.8,
            "domain": [0,2000],
            "range": [50,4000]
          },
          "legend":{
            "symbolOpacity":0.5,
            "symbolFillColor":"lightgray",
            "values":[1,100,1000],
            "title":["Number of", "Mathematicians"],
            "titleFont": "Georgia",
            "titleFontWeight":500,
            "titleFontSize":12,
            "titleFontStyle":"italic",
            "labelFont":"Source Sans Pro",
            "orient":"none",
            "legendX":20, "legendY":130,
            "titleOpacity":0.8,
            "labelOpacity":0.8,
            "labelFontSize":12
          }
        },

        "color": {
          "field": "Continent", 
          "scale": {
            "domain":["AF", "AS", "EU", "NA", "OC", "SA"],
            "range": ["#b0b0b0 ", "#C47877", "#a2e5d2", "#67bcbd", "#BAE493", "#E5A2B5"]
          },
          "legend":{
            "title":["Continent"],
            "titleFont": "Georgia",
            "titleFontWeight":500,
            "titleFontSize":12,
            "titleFontStyle":"italic",
            "labelFont":"Source Sans Pro",
            "orient":"none",
            "legendX":20, "legendY":20,
            "titleOpacity":0.8,
            "labelOpacity":0.8,
            "labelFontSize":12
          }
        },

        "opacity":{
          "condition":{"selection":"continent_highlight","value":0.7},
          "value":0.2
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "per_mil", "type": "quantitative", "title": "Wikipedia Mathematicians per million people"},
          {"field": "GDP_per_Capita_PPP", "type": "quantitative", "title": "GDP per capita"},
          {"field": "n", "type": "quantitative", "title": "Number of Wikipedia Mathematicians"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy":0,
        "fontSize": 10.5,
        "fontStyle": "italic",
        "font": "Georgia"
      },
      "encoding": {
        "text": {"field": "country_code", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition":{"selection":"continent_highlight","value":0.8},
          "value":0.2
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}
