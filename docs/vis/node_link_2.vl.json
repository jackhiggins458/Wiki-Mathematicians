{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A node-link diagram with force-directed layout, depicting Wikipedia relationships between the top 100 most influential",
  "width": 575,
  "height": 850,
  "padding": 0,
  "autosize": "pad",
  "title": {
    "text":"Relationships Network of Top 100 Wiki Mathematicians",
    "color":"#303030",
    "anchor": "end",
    "frame": "group",
    "subtitle": ["Mathematician ranking determined by a PageRank algorithm.",
    "Hover over nodes to learn more!"], 
    "font":"Georgia",
    "fontSize":16,
    "fontWeight":"400",
    "subtitleFont":"Georgia",
    "subtitleFontSize":12,
    "subtitleColor":"#808080",
    "subtitleLineHeight":18,
    "subtitlePadding":10,
    "dy":80,
    "dx":-80
  },

"signals": [
    { "name": "cx", "update": "width / 2" },
    { "name": "cy", "update": "height / 3 + height/4.5" },
    { "name": "nodeRadius", "value": 5},
    { "name": "nodeCharge", "value": -50},
    { "name": "linkDistance", "value": 70},
    { "name": "static", "value": false },
    {
      "description": "State variable for active node fix status.",
      "name": "fix", "value": false,
      "on": [
        {
          "events": "symbol:mouseout[!event.buttons], window:mouseup",
          "update": "false"
        },
        {
          "events": "symbol:mouseover",
          "update": "fix || true"
        }
        
      ]
    },
    {
      "description": "Graph node most recently interacted with.",
      "name": "node", "value": null,
      "on": [
        {
          "events": "symbol:mouseover",
          "update": "fix === true ? item() : node"
        }
      ]
    },
    {
      "description": "Flag to restart Force simulation upon data changes.",
      "name": "restart", "value": false,
      "on": [
        {"events": {"signal": "fix"}, "update": "fix && fix.length"}
      ]
    }
  ],

  "data": [
    {
      "name": "node-data",
      "url": "https://raw.githubusercontent.com/jackhiggins458/FIT31792/main/data/top_100.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "link-data",
      "url": "https://raw.githubusercontent.com/jackhiggins458/FIT31792/main/data/top_100_links.json",
      "format": {"type": "json", "property": "links"}
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain":["<500","500-1499","1500-1749","1750-1849","1850-1940",">1940"],
      "range": ["#C47877", "#ff7fa7", "#E5A2B5", "#a2e5d2", "#6bafb0", "#A3DB6F"],
      "reverse":false
    }, 
    {
      "name": "size",
      "type": "log",
      "domain": {"data": "node-data", "field": "rank"},
      "range": [25,1200],
      "reverse":true
    }
  ],

  "legends": [
    {
      "fill": "color",
      "orient": "none",
      "legendX":60,
      "legendY":100,
      "title": "Year of Birth",
      "direction":"vertical",
      "titleFont": "Georgia",
      "titleFontWeight":"500",
      "titleFontSize":14,
      "titleFontStyle":"italic",
      "labelFont":"Source Sans Pro",
      "titleOpacity":0.8,
      "labelOpacity":0.8,
      "labelFontSize":12
        
    },
    
    {
      "size": "size",
      "title": ["Ranking"],
      "format": "s",
      "symbolFillColor": "grey",
      "symbolOpacity":0.3,
      "symbolStrokeColor": "transparent",
      "symbolType": "circle",
      "tickMinStep":25,
      "orient": "none",
      "legendX":175,
      "legendY":100,
      "direction":"vertical",
      "titleFont": "Georgia",
      "titleFontWeight":"500",
      "titleFontSize":14,
      "titleFontStyle":"italic",
      "labelFont":"Source Sans Pro",
      "symbolOffset":10,
      "titleOpacity":0.8,
      "labelOpacity":0.8,
      "labelFontSize":12
    }
  ],

  "marks": [
    {
      "name": "nodes",
      "type": "symbol",
      "zindex": 1,
      "from": {"data": "node-data"},
      "on": [
        {
          "trigger": "fix",
          "modify": "node",
          "values": "fix === true ? {fx: node.x, fy: node.y} : {fx: fix[0], fy: fix[1]}"
        },
        {
          "trigger": "!fix",
          "modify": "node", "values": "{fx: null, fy: null}"
        }
      ],

      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "year_of_birth_binned"},
          "tooltip":[{"field":"name_rank"}],
          "stroke": {"value": "white"}
        },
        "update": {
          "size": {"field":"rank", "scale": "size"},
          "shape": {"value":"circle"},
          "cursor": {"value": "pointer"}
        }
      },

      "transform": [
        {
          "type": "force",
          "iterations": 300,
          "restart": {"signal": "restart"},
          "static": {"signal": "static"},
          "signal": "force",
          "forces": [
            {"force": "center", "x": {"signal": "cx"}, "y": {"signal": "cy"}},
            {"force": "collide", "radius": {"field": "rank"}},
            {"force": "nbody", "strength": {"signal": "nodeCharge"}},
            {"force": "link", "links": "link-data", "distance": {"signal": "linkDistance"}}
          ]
        }
      ]
    },
    {
      "type": "path",
      "from": {"data": "link-data"},
      "interactive": false,
      "encode": {
        "update": {
          "stroke": {"value": "#ccc"},
          "strokeWidth": {"value": 0.5}
        }
      },
      "transform": [
        {
          "type": "linkpath",
          "require": {"signal": "force"},
          "shape": "line",
          "sourceX": "datum.source.x", "sourceY": "datum.source.y",
          "targetX": "datum.target.x", "targetY": "datum.target.y"
        }
      ]
    }
  ]
}
