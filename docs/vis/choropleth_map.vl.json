{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 600,
  "height": 350,
  "data": {
    "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
    "format": {"type": "topojson", "feature": "countries"}
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/jackhiggins458/FIT31792/main/data/math_country_data.csv"},
        "key": "id",
        "fields": ["per_mil_rounded", "per_mil_class", "n"]
      }
    }
  ],
  "background":"transparent",
  "projection": {
    "type": "naturalEarth1", 
    "clipExtent": [[0,0],[600,320]],
    "scale":120, 
    "rotate":[-10,0,0], 
    "center": [8,8]
  },
  "title": {
    "text":"Wiki Mathematicians per Million People since 1800",
    "anchor": "middle",
    "frame": "group",
    "font":"Georgia",
    "color":"#303030",
    "fontSize":16,
    "fontWeight":500,
    "subtitleFont":"Source Sans Pro",
    "subtitleFontSize":14,
    "subtitleColor":"#808080",
    "subtitleLineHeight":18,
    "subtitlePadding":10,
    "dy":0
  },
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth":1},
  "encoding": {
    "color": {
      "field": "per_mil_class",
      "type":"nominal",
      "scale":{
        "domain":["0", "0 - 0.1","0.1 - 1", "1 - 5","5-10",">10"],
        "range":["#e0e0e0", 
        "#d5eddc", "#c1e0ca", "#82c2c2", "#629DAE", "#3C537D"]
      },
    "legend":{
      "direction":"horizontal",
      "title": "Mathematicians per Million People",
      "orient": "none", 
      "legendX":170, "legendY":300, 
      "titleLimit":300,
      "titleFont": "Georgia",
      "titleFontWeight":500,
      "titleFontSize":14,
      "titleFontStyle":"italic",
      "labelFont":"Source Sans Pro",
      "titleAnchor":"middle",
      "labelFontSize":10,
      "symbolType":"square",
      "symbolSize":200,
      "titleOpacity":0.8,
      "labelOpacity":0.8,
      "labelFontSize":12
    }
  },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "per_mil_rounded", "type": "quantitative", "title": "Wikipedia Mathematicians per million people"},
      {"field": "n", "type": "quantitative", "title": "Number of Wikipedia Mathematicians"}
    ]
  },
"config": {
  "style": {
    "cell": {
      "stroke": "transparent"
    }
  }
}
}
