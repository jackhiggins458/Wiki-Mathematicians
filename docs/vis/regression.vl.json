{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width":500,
  "height":300,
  "data": {
    "url": "https://raw.githubusercontent.com/jackhiggins458/FIT31792/main/data/top_100.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color": "#77c3c4",
        "size": 100
      },
      "encoding": {
        "x": {
          "field": "rank",
          "type": "quantitative"
        },
        "y": {
          "field": "links",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "#E5A2B5"
      },
      "transform": [
        {
          "regression": "links",
          "on": "rank"
        }
      ],
      "encoding": {
        "x": {
          "field": "rank",
          "type": "quantitative"
        },
        "y": {
          "field": "links",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "rank",
          "on": "links",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "#E5A2B5",
        "fontWeight":"bold",
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
